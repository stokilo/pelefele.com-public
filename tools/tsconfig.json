{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./address/node_modules/@types"
    ],
    "types": [
      "node", "jest"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["./jest.config.js", "./node_modules/**/*", "./build/**/*", "types"],
  "include": [
    "src"
  ]
}
